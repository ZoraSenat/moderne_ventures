<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-lg btn-success">New Contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Company</th>
        <th>Source</th>
        <th>Bio</th>
        <th>Linkedin</th>
        <th>Twitter</th>
        <th>Title</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Image</th>
        <th>Notes</th>
        <th>Pilots</th>
        <th>Actions</th>
      </tr>

      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.company.company %></td>
        <td><%= contact.source.name %></td>
        <td><%= contact.bio %></td>
        <td><%= contact.linkedin %></td>
        <td><%= contact.twitter %></td>
        <td><%= contact.title %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><img src='<%= contact.image %>' class='img-responsive'></td>
        <td><%= contact.notes %></td>
        <td><%= contact.pilots %></td>
        <td>
          <a href="/contacts/<%= contact.id %>" class="btn btn-primary">Show</a>
          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
