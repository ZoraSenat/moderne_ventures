<div class="page-header">
  <h3>Contact #<%= @contact.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>First name</dt>
      <dd><%= @contact.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @contact.last_name %></dd>

      <dt>Company</dt>
      <dd>
        <% if @contact.company.present? %>
          <a href="/companies/<%= @contact.company_id %>">
            <%= @contact.company.company %>
          </a>
        <% end %>
      </dd>

      <dt>Source</dt>
      <dd>
        <% if @contact.source.present? %>
          <a href="/sources/<%= @contact.source_id %>">
            <%= @contact.source.name %>
          </a>
        <% end %>
      </dd>

      <dt>Bio</dt>
      <dd><%= @contact.bio %></dd>

      <dt>Linkedin</dt>
      <dd><%= @contact.linkedin %></dd>

      <dt>Twitter</dt>
      <dd><%= @contact.twitter %></dd>

      <dt>Title</dt>
      <dd><%= @contact.title %></dd>

      <dt>Email</dt>
      <dd><%= @contact.email %></dd>

      <dt>Phone</dt>
      <dd><%= @contact.phone %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @contact.image %>" class="img-responsive"></dd>

      <dt>Notes</dt>
      <dd><%= @contact.notes %></dd>

      <dt>Pilots</dt>
      <dd><%= @contact.pilots %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/contacts" class="btn btn-primary">
        Back
      </a>
      <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_contact/<%= @contact.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Contact has many programs -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Programs
      </li>

      <% @contact.programs.each do |program| %>
        <li class="list-group-item">
          <a href="/programs/<%= program.id %>">
            <%= program.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/programs/<%= program.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/programs/<%= program.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_program/<%= program.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_program" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for start_date -->
      <div class="form-group">
        <label for="start_date" class="control-label">
          Start date
        </label>

        <input type="text" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="">
      </div>

      <!-- Label and input for end_date -->
      <div class="form-group">
        <label for="end_date" class="control-label">
          End date
        </label>

        <input type="text" id="end_date" name="end_date" placeholder="End date" class="form-control" value="">
      </div>

      <!-- Label and input for contact_id -->
      <input type="hidden" name="contact_id" value="<%= @contact.id %>">

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="">
      </div>

      <!-- Label and input for category -->
      <div class="form-group">
        <label for="category" class="control-label">
          Category
        </label>

        <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Program
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
