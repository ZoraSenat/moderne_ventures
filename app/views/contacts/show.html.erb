<div class="page-header">
  <h3>Contact #<%= @contact.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>First name</dt>
      <dd><%= @contact.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @contact.last_name %></dd>

      <dt>Company</dt>
      <dd><%= @contact.company_id %></dd>

      <dt>Source</dt>
      <dd><%= @contact.source_id %></dd>

      <dt>Bio</dt>
      <dd><%= @contact.bio %></dd>

      <dt>Linkedin</dt>
      <dd><%= @contact.linkedin %></dd>

      <dt>Twitter</dt>
      <dd><%= @contact.twitter %></dd>

      <dt>Title</dt>
      <dd><%= @contact.title %></dd>

      <dt>Email</dt>
      <dd><%= @contact.email %></dd>

      <dt>Phone</dt>
      <dd><%= @contact.phone %></dd>

      <dt>Image</dt>
      <dd><%= @contact.image %></dd>

      <dt>Notes</dt>
      <dd><%= @contact.notes %></dd>

      <dt>Pilots</dt>
      <dd><%= @contact.pilots %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/contacts" class="btn btn-primary">
        Back
      </a>
      <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_contact/<%= @contact.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
